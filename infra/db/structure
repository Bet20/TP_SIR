-- Tabela 'user'
CREATE TABLE user (
    id INT PRIMARY key AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    name VARCHAR(255),
    password VARCHAR(255),
    admin bit default 0,
    telemovel VARCHAR(20),
    foto varchar(50) NULL,
    estado INT NOT null default 1
);

INSERT INTO `user`
(id, email, name, password, admin, telemovel, foto, estado)
